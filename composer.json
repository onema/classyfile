{
    "name": "onema/classyfile",
    "description":"This component provides a way to break files containing multiple classes into single files per class.",
    "keywords":["class", "file", "single", "convert"],
    "type":"library",
    "license":"MIT",
    "authors": [{
        "name": "Juan Manuel Torres",
        "email": "kinojman@gmail.com"
    }],
    "require": {
        "php": ">=5.4",
        "nikic/php-parser": "^1.3|2.0.*@dev",
        "symfony/finder": "^2.7",
        "symfony/console": "^2.7",
        "symfony/event-dispatcher" : "^2.7",
        "league/flysystem": "^1.0.4",
        "fabpot/php-cs-fixer": "^1.8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.6",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Onema\\ClassyFile\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "bin": [
        "classyfile"
    ]
}
