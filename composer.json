{
    "name": "onema/classyfile",
    "description":"This component provides a way to break files containing multiple classes into single files per class.",
    "keywords":["class", "file", "single", "convert"],
    "type":"library",
    "license":"MIT",
    "authors": [{
        "name": "Juan Manuel Torres",
        "email": "kinojman@gmail.com"
    }],
    "require": {
        "php": ">=5.5",
        "nikic/php-parser": "2.0.*@dev",
        "symfony/event-dispatcher" : "3.0.*@dev",
        "symfony/console": "3.0.*@dev",
        "league/flysystem": "^1.0",
        "mockery/mockery": "^0.9.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.6",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Onema\\ClassyFile\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "bin": [
        "classyfile"
    ]
}
